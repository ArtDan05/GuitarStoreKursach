<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/system_neutral2_10">

    <TextView
        android:id="@+id/tView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Текущий заказ: "
        android:textSize="12pt"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/currentOrder"
        android:layout_margin="25dp"
        />

    <ListView
        android:id="@+id/currentOrder"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_margin="10dp"
        android:background="@android:color/system_neutral2_10"
        app:layout_constraintBottom_toTopOf="@+id/orderHistoryButton"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tView" />

    <Button
        android:id="@+id/orderHistoryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="История заказов"
        android:onClick="historyButton"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toTopOf="@+id/aboutAppButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentOrder"
        android:backgroundTint="@android:color/system_accent2_900"/>
    <Button
        android:id="@+id/aboutAppButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="О приложении"
        android:onClick="aboutButton"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderHistoryButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="@android:color/system_accent2_900"/>

</androidx.constraintlayout.widget.ConstraintLayout>